<?xml version="1.0"?>
<system>
    <plugs>
        <modifier>
            <required>yes</required>
            <method>createChildAsset</method>
            <action>Linking::createLink</action>
            <fatal>yes</fatal>
            <parameters>
                <parameter>parentid</parameter>
                <parameter>childid</parameter>
            </parameters>
            <modify-parameters>
                <parameter>childid</parameter>
            </modify-parameters>
        </modifier>

        <modifier>
            <required>yes</required>
            <method>convertToAssetid</method>
            <action>User::addSuperUser</action>
            <fatal>yes</fatal>
            <parameters>
                <parameter>userid</parameter>
            </parameters>
            <modify-parameters>
                <parameter>userid</parameter>
            </modify-parameters>
        </modifier>

        <modifier>
            <required>yes</required>
            <method>convertToAssetid</method>
            <action>Permission::grantPermission</action>
            <fatal>yes</fatal>
            <parameters>
                <parameter>userid</parameter>
            </parameters>
            <modify-parameters>
                <parameter>userid</parameter>
            </modify-parameters>
        </modifier>
    </plugs>
</system>
